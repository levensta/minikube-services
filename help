minikube start --vm-driver=virtualbox --disk-size=4608
eval $(minikube docker-env)
minikube addons enable metallb
kubectl apply -f configmap.yaml
// docker build ...
kubectl apply -f name.yaml

kubectl get pods // посмотреть свои поды
kubectl get deploy // посмотреть свои деплои
kubectl get svc // посмотреть свои сервиси
kubectl delete pods name
kubectl delete deploy name

// для поиска ошибок
kubectl logs name
kubectl describe pods name

// для перезапуска
minikube stop
minikube delete
minikube start ...